<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.example.xw.jikeviewpager.VerticalViewPager
        android:layout_centerInParent="true"
        android:id="@+id/vertical_viewpager3"
        android:layout_width="140dp"
        android:layout_height="140dp" />

    <com.example.xw.jikeviewpager.VerticalViewPager
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/vertical_viewpager3"
        android:id="@+id/vertical_viewpager4"
        android:layout_width="140dp"
        android:layout_height="40dp">

    </com.example.xw.jikeviewpager.VerticalViewPager>

    <Button
        android:layout_marginBottom="30dp"
        android:id="@+id/change_btn2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_btn"
        android:text="换一换"/>


</RelativeLayout>